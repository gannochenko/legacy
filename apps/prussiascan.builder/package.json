{
    "name": "prussiascan.builder",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "dev": "dotenv yarn start:dev",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "db:migrate": "./script/migrate.sh",
        "db:migrate:local": "dotenv ./script/migrate.sh local",
        "image:build": "./script/image.build.sh",
        "image:run": "./script/image.run.sh",
        "image:push": "./script/image.push.sh"
    },
    "dependencies": {
        "@nestjs/common": "^8.2.4",
        "@nestjs/core": "^8.2.4",
        "@nestjs/graphql": "^9.1.2",
        "@nestjs/platform-express": "^8.2.4",
        "@nestjs/swagger": "^5.1.5",
        "@nestjs/typeorm": "^8.0.2",
        "apollo-server-express": "^3.5.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "express-rate-limit": "^5.5.1",
        "fastify-swagger": "^4.13.0",
        "graphql": "^16.2.0",
        "graphql-query-complexity": "^0.11.0",
        "graphql-tools": "^8.2.0",
        "helmet": "^4.6.0",
        "pg": "^8.7.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.4.0",
        "swagger-ui-express": "^4.3.0",
        "typeorm": "^0.2.41"
    },
    "devDependencies": {
        "@nestjs/schematics": "^8.0.5",
        "@nestjs/testing": "^8.2.4",
        "@types/express": "^4.17.13",
        "@types/flat": "^5.0.2",
        "@types/jest": "^27.0.3",
        "@types/node": "^17.0.0",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "dotenv-cli": "^4.1.1",
        "eslint": "^8.4.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "jest": "^27.4.5",
        "prettier": "^2.5.1",
        "pretty-quick": "^3.1.2",
        "supertest": "^6.1.6",
        "ts-jest": "^27.1.2",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^3.12.0",
        "typescript": "^4.5.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "husky": {
            "hooks": {
                "pre-commit": "pretty-quick --staged"
            }
        }
    }
}
